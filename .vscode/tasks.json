{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "presentation": {
    "panel": "dedicated"
  },
  "windows": {
    "options": {
      "shell": {
        "executable": "cmd.exe",
        "args": [
            "/d", "/c"
        ]
      }
    }
  },
  "inputs": [
    {
      "id": "terminate",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": "terminateAll"
    }
  ],

  "tasks": [
      /* Serve application */
    {
      "label": "Serve Application",
      "type": "shell",
      "command": "npm",
      /* Serves without opening Chrome as VSCode debugger opens Chrome */
      "args": [
        "run",
        "--prefix",
        "${workspaceFolder}/",
        "serve:dev-debug"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "source": "ts",
        "applyTo": "closedDocuments",
        "fileLocation": [
          "relative",
          "${cwd}"
        ],
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "(Angular Live Development Server is listening on localhost:\\d+)|(âœ– Failed to compile)|(Error: .*)"
          }
        }
      }
    },
    // Kill all node processes
    {
      /* Kills all running node instances.  E.g. use to kill the node server launched by Checkserver */
      "label": "Taskkill node.exe",
      "type": "shell",
      "windows": {
        "command": "cmd",
        "args": [
          "/c",
          "TASKKILL /IM node.exe /F || echo No node.exe processes found"
        ]
      },
      "linux": {
        "command": "sudo",
        "args": [
          "killall",
          "node"
        ]
      },
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "group": "test",
      "problemMatcher": []
    },
  ],
}
